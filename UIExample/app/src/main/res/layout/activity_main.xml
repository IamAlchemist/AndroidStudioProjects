<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fcfcfc"
    tools:context=".MainActivity">

    <Button android:id="@+id/btn_popup_activity"
        style="@style/button_in_main_activity"
        android:text="@string/popup_menu"/>

    <Button android:id="@+id/btn_popup_window"
        style="@style/button_in_main_activity"
        android:text="@string/popup_window"
        android:layout_below="@+id/btn_popup_activity"
        />

    <TextView android:id="@+id/text_view"
        style="@style/button_in_main_activity"
        android:gravity="center"
        android:text="@string/test_string"
        android:layout_below="@+id/btn_popup_window"/>

    <Button android:id="@+id/btn_section_list"
        style="@style/button_in_main_activity"
        android:text="@string/popup_window"
        android:layout_below="@+id/text_view"/>
</RelativeLayout>
